<UserControl x:Class="Aov_Mod_GUI.MainWindowControls.HeroMultiModField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aov_Mod_GUI.MainWindowControls"
             mc:Ignorable="d"
             d:DesignHeight="350" d:DesignWidth="600">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Label Content="{Binding HeroName}" Foreground="White" Margin="10 0"
               FontFamily="{StaticResource Montserrat ExtraBold Italic}" FontSize="20"/>
            <Button Grid.Column="1" x:Name="RemoveHeroButton">
                <Image Source="/images/ic_remove.png" Margin="5"/>
            </Button>
        </Grid>
        <StackPanel x:Name="SkinFieldContainer" Margin="10 5">
            
        </StackPanel>
        <Button x:Name="AddSkinButton" Content="Add Skin" Margin="10 5"
                HorizontalAlignment="Right" Padding="20 5"/>
        <Separator Foreground="Gray" Margin="10 5"/>
    </StackPanel>
</UserControl>
